#subscribe {
	padding: 50px 0 70px;
	margin: 0 auto;
	background: #1b222a;
	text-align: center;

	h1 {
		margin: 0;
		color: #fff;
		font-size: 28px;
		font-family: 'Proxima Nova Light';
		margin-bottom: 40px;
	}

	input[type="email"] {
		border: none;
		padding: 16px;
		background: #fff;
		min-width: 400px;
		border-radius: 3px;

		&:focus {
			outline: none;
		}
	}

	input[type="button"] {
		border: none;
		padding: 16px;
		background: #e94b35;
		color: #fff;
		font-family: 'Proxima Nova Semibold';
		font-size: 19px;
		border-radius: 3px;

		&:focus {
			outline: none;
		}
	}
}