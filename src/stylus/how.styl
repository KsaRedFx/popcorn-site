#how {
	background: url(../images/bg-how.jpg) no-repeat center #0e1226;
	background-size: cover;
	height: 569px;
	position: relative;
	color: #fff;
	box-sizing: border-box;
	padding-top: 40px;
	overflow: hidden;
	text-align: center;

	h2, h4 {
		margin: 0 0 10px;
	}

	.steps {
		position: relative;
		font-weight: bold;
		margin-top: 50px;
		padding-left: 0;

		li {
			line-height: 42px;
			min-width: 175px;
			position: relative;
			list-style: none;
			padding-top: 157px;
			display: inline-block;
			overflow: visible;
			font-family: 'Proxima Nova Semibold';
			font-size: 20px;
			margin-right: 190px;

			&.how-open {
				background: url(../images/how-open.png) no-repeat top center;
				background-size: auto 157px;
			}

			&.how-subtitles {
				background: url(../images/how-subtitles.png) no-repeat top center;
				background-size: auto 157px;
			}

			&.how-play {
				background: url(../images/how-play.png) no-repeat top center;
				background-size: auto 157px;
			}

			&:last-child {
				margin: 0;
			}
		}
	}
}
