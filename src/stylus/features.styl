#features {
	padding: 35px 0;
	padding-bottom: 0;

	article {
		width: 400px;
		float: left;
		padding: 30px 0;

		&:nth-child(even) {
			margin-left: 180px;
		}

		img {
			float: left;
			margin-right: 25px;
			position: relative;
			top: -10px;
		}
	}

	.action {
		position: relative;
		padding-top: 140px;
		margin-top: 100px;
		border-top: 1px solid darken(#f9f9f9, 5%);
		background: #f9f9f9;
		text-align: center;
	}

	.pochoclin {
		position: absolute;
		top: -100px;
		left: 0;
		right: 0;
		width: 250px;
	}

	hr {
		border: none;
		border-top: 1px solid darken(#f9f9f9, 15%);
		position: relative;
		top: 10px;
		z-index: -1;
		margin-top: 20px;
		width: 50%;

		+ h2 {
			background: #F9F9F9;
			display: inline-block;
			padding: 0 20px;
			top: -50px;
			position: relative;
			margin-bottom: 0;
			font-weight: bold;
		}
	}

	[class^="btn-"] {
		margin-top: -25px;
	}

	small {
		display: block;
		font-style: italic;
		color: #a7a7a7;
		line-height: 25px;

		span {
			font-style: initial;
			font-size: 10px;
			margin: 0 5px;
		}
	}
}

.warning {
	background: #fcffe2;
	font-size: 16px;
	padding: 15px 0;
	color: #858230;
	text-align: center;

	h5 {
		font-size: 18px;
		color: #555938;
		display: block;
		max-width: 880px;
		margin: 0 auto;
		position: relative;

		&:before {
			font-size: 30px;
			display: block;
		}
	}
	p {
		display: block;
		max-width: 880px;
		margin: 5px auto;
	}
}

@media screen and (max-width: 980px){
	#features {
		article{
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
			width: 100%;
			max-width: 800px;
			margin: 40px auto !important;
			padding: 0 8%;
			overflow: hidden;
			float: none;
		}
	}
	.warning {
		text-align: center;
		h5:before {
			display: none;
		}
	}
}

@media screen and (max-width: 750px){
	#features {
		.pochoclin {
			padding: 0;
		}
		hr {
			display: none;
		}
		hr + h2 {
			margin-top: 20px;
			font-size: 30px;
			color: rgb(0, 0, 0);
		}
	}
}

@media screen and (max-width: 500px){
	#features {
		article{
			padding-top: 20px;
			max-width: 400px;
			p {
				margin-left: 105px;
			}
			img {
				max-width: 80px;
			}
		}
	}
}
